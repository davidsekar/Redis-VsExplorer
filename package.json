{
  "name": "redis-xplorer",
  "displayName": "Redis Xplorer",
  "description": "Connect to multiple Redis servers simultaneously (TLS supported). Perform simple read, write & filter keys operations with ease.",
  "version": "1.2.4",
  "publisher": "Davidsekar",
  "author": {
    "name": "David Gnanasekaran",
    "email": "c.davidgnanasekaran@gmail.com"
  },
  "icon": "images/redis.png",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:redisXplorer",
    "onCommand:config.commands.redisServer"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": [{
      "title": "Redis Xplorer Configuration",
      "properties": {
        "redisXplorer.config": {
          "type": "object",
          "description": "Redis server connection configuration & profiles",
          "properties": {
            "scanLimit": {
              "type": "number",
              "description": "Number of items to scan on each request to Redis server"
            },
            "profiles": {
              "type": "array",
              "description": "Redis connection profiles",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Profile nick name"
                  },
                  "host": {
                    "type": "string",
                    "description": "Redis server/host name"
                  },
                  "accessKey": {
                    "type": "string",
                    "description": "Password to authenticate"
                  },
                  "filter": {
                    "type": "string",
                    "description": "Pattern to filter redis keys"
                  },
                  "port": {
                    "type": "string",
                    "description": "Port number to connect on the Redis server"
                  }
                }
              }
            }
          }
        }
      }
    }],
    "views": {
      "explorer": [{
        "id": "redisXplorer",
        "name": "Redis Xplorer"
      }]
    },
    "menus": {
      "view/item/context": [{
          "command": "config.commands.redisServer.delItem",
          "when": "view == redisXplorer && viewItem == redisNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.delAllItems",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.refreshServerItem",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.addItem",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.delServerItem",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.filterServerItem",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.edit",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        }
      ]
    },
    "commands": [{
        "command": "config.commands.redisServer",
        "title": "Redis Xplorer: Add new redis server connection profile"
      },
      {
        "command": "config.commands.redisServer.scanLimit",
        "title": "Redis Xplorer: Max. number of items to fetch per request"
      },
      {
        "command": "config.commands.redisServer.edit",
        "title": "Edit selected redis server info.",
        "icon": {
          "light": "resources/light/baseline_edit_black_18dp.png",
          "dark": "resources/dark/baseline_edit_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.delItem",
        "title": "Delete this redis item",
        "icon": {
          "light": "resources/light/baseline_delete_forever_black_18dp.png",
          "dark": "resources/dark/baseline_delete_forever_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.delServerItem",
        "title": "Delete this connection profile",
        "icon": {
          "light": "resources/light/baseline_remove_black_18dp.png",
          "dark": "resources/dark/baseline_remove_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.addItem",
        "title": "Add Redis Item",
        "icon": {
          "light": "resources/light/baseline_add_black_18dp.png",
          "dark": "resources/dark/baseline_add_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.refreshServerItem",
        "title": "Refresh Redis Connection",
        "icon": {
          "light": "resources/light/baseline_refresh_black_18dp.png",
          "dark": "resources/dark/baseline_refresh_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.filterServerItem",
        "title": "Filter keys by name",
        "icon": {
          "light": "resources/light/baseline_filter_list_black_18dp.png",
          "dark": "resources/dark/baseline_filter_list_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.delAllItems",
        "title": "(WARN) Flush entire REDIS",
        "icon": {
          "light": "resources/light/baseline_layers_clear_black_18dp.png",
          "dark": "resources/dark/baseline_layers_clear_white_18dp.png"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "start": "npm run webpack -- --watch",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "tslint -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "publish": "vsce package && vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/ioredis": "^4.0.13",
    "@types/lodash": "^4.14.136",
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.50",
    "@types/vscode": "^1.30.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "vscode-test": "^1.0.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5"
  },
  "dependencies": {
    "ioredis": "^4.11.1",
    "lodash": "^4.17.14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidsekar/Redis-Xplorer"
  },
  "homepage": "https://github.com/davidsekar/Redis-Xplorer/blob/master/README.md",
  "license": "MIT"
}
