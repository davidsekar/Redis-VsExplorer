{
  "name": "redis-vsexplorer",
  "displayName": "Redis VsExplorer",
  "description": "To access redis easily",
  "version": "1.0.0",
  "publisher": "Davidsekar",
  "author": {
    "name": "David Gnanasekaran",
    "email": "c.davidgnanasekaran@gmail.com"
  },
  "icon": "images/redis.png",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:redisVsExplorer",
    "onCommand:config.commands.redisServer"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": [
      {
        "title": "Easy Redis Configuration",
        "properties": {
          "redisVsExplorer.address": {
            "type": "string",
            "description": "Redis Server Address: Where redis client connect to"
          }
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "redisVsExplorer",
          "name": "Redis Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "config.commands.redisServer.delAllItems",
          "when": "view == redisVsExplorer",
          "group": "navigation"
        },
        {
          "command": "config.commands.redisServer.addItem",
          "when": "view == redisVsExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "config.commands.redisServer.delItem",
          "when": "view == redisVsExplorer && viewItem == redisNode",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "config.commands.redisServer",
        "title": "Redis-VsExplorer: Add new redis server address"
      },
      {
        "command": "config.commands.redisServer.delAllItems",
        "title": "Flush REDIS",
        "icon": {
          "light": "resources/light/baseline_layers_clear_black_18dp.png",
          "dark": "resources/dark/baseline_layers_clear_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.delItem",
        "title": "Delete Item",
        "icon": {
          "light": "resources/light/baseline_remove_black_18dp.png",
          "dark": "resources/dark/baseline_remove_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.addItem",
        "title": "Add Item",
        "icon": {
          "light": "resources/light/baseline_add_black_18dp.png",
          "dark": "resources/dark/baseline_add_white_18dp.png"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "publish": "vsce package && vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "tslint": "^5.17.0",
    "typescript": "^3.1.4",
    "vscode": "^1.1.34"
  },
  "dependencies": {
    "ioredis": "^4.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidsekar/Redis-VsExplorer"
  },
  "homepage": "https://github.com/davidsekar/Redis-VsExplorer/blob/master/README.md",
  "license": "MIT"
}
