{
  "name": "redis-xplorer",
  "displayName": "Redis Xplorer",
  "description": "Redis Xplorer allows you to easily access, filter & modify redis keys",
  "version": "1.2.1",
  "publisher": "Davidsekar",
  "author": {
    "name": "David Gnanasekaran",
    "email": "c.davidgnanasekaran@gmail.com"
  },
  "icon": "images/redis.png",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:redisXplorer",
    "onCommand:config.commands.redisServer"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": [{
      "title": "Redis Xplorer Configuration",
      "properties": {
        "redisXplorer.config": {
          "type": "string",
          "description": "Redis Server Address: Where redis client connect to"
        }
      }
    }],
    "views": {
      "explorer": [{
        "id": "redisXplorer",
        "name": "Redis Xplorer"
      }]
    },
    "menus": {
      "view/item/context": [{
          "command": "config.commands.redisServer.delItem",
          "when": "view == redisXplorer && viewItem == redisNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.delAllItems",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.refreshServerItem",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.addItem",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.delServerItem",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        },
        {
          "command": "config.commands.redisServer.filterServerItem",
          "when": "view == redisXplorer && viewItem == redisServerNode",
          "group": "inline"
        }
      ]
    },
    "commands": [{
        "command": "config.commands.redisServer",
        "title": "Redis Xplorer: Add new redis server address"
      },
      {
        "command": "config.commands.redisServer.delItem",
        "title": "Delete this redis item",
        "icon": {
          "light": "resources/light/baseline_remove_black_18dp.png",
          "dark": "resources/dark/baseline_remove_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.delServerItem",
        "title": "Delete this connection profile",
        "icon": {
          "light": "resources/light/baseline_remove_black_18dp.png",
          "dark": "resources/dark/baseline_remove_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.addItem",
        "title": "Add Redis Item",
        "icon": {
          "light": "resources/light/baseline_add_black_18dp.png",
          "dark": "resources/dark/baseline_add_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.refreshServerItem",
        "title": "Refresh Redis Connection",
        "icon": {
          "light": "resources/light/baseline_refresh_black_18dp.png",
          "dark": "resources/dark/baseline_refresh_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.filterServerItem",
        "title": "Filter keys by name",
        "icon": {
          "light": "resources/light/baseline_filter_list_black_18dp.png",
          "dark": "resources/dark/baseline_filter_list_white_18dp.png"
        }
      },
      {
        "command": "config.commands.redisServer.delAllItems",
        "title": "(WARN) Flush entire REDIS",
        "icon": {
          "light": "resources/light/baseline_layers_clear_black_18dp.png",
          "dark": "resources/dark/baseline_layers_clear_white_18dp.png"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "start": "npm run webpack -- --watch",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "lint": "tslint -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run test-compile && node ./node_modules/vscode/bin/test",
    "publish": "vsce package && vsce publish"
  },
  "devDependencies": {
    "@types/ioredis": "^4.0.12",
    "@types/lodash": "^4.14.134",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.10.25",
    "ts-loader": "^6.0.4",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2",
    "vscode": "^1.1.34",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.4"
  },
  "dependencies": {
    "ioredis": "^4.10.0",
    "lodash": "^4.17.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidsekar/Redis-Xplorer"
  },
  "homepage": "https://github.com/davidsekar/Redis-Xplorer/blob/master/README.md",
  "license": "MIT"
}
